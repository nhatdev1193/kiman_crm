<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">
      <i class="fa fa-address-book"></i> Quản lý hồ sơ
    </h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse">
        <i class="fa fa-minus"></i>
      </button>
    </div><!-- /.box-tools -->
  </div><!-- /.box-header -->

  <div class="box-body">
    <div class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-4">Loại sản phẩm</label>
        <div class="col-sm-8"><%= @current_step.product.name %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-4">Trạng thái</label>
        <div class="col-sm-8"><%= @current_step.display_name %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-4">Người tạo</label>
        <div class="col-sm-8">NGUOI_TAO</div>
      </div>
      <div class="form-group">
        <label class="col-sm-4">Chịu trách nhiệm</label>
        <div class="col-sm-8">CHIU TRACH NHIEM</div>
      </div>
      <div class="form-group">
        <label class="col-sm-4">Chi nhánh</label>
        <div class="col-sm-8">CHI_NHANH</div>
      </div>
      <div class="form-group">
        <label class="col-sm-4">Cập nhật lần cuối</label>
        <div class="col-sm-8">CAP_NHAT_LAN_CUOI</div>
      </div>
    </div>
  </div><!-- /.box-body -->
</div><!-- /.box -->