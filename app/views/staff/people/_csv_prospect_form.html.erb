<div class="modal fade" id="modal-csv-prospect-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button> -->
          <h4 class="modal-title text-center" id="myModalLabel">
            <i class="fa fa-upload"></i>
            Nhập từ file CSV
          </h4>
        </div>
        <%= form_with url: staff_people_csv_upload_path, method: :post, class: 'form-horizontal',
                      id: 'normal_prospect_form', html: { role: 'form' }, multipart: true do |f| %>
          <div class="modal-body">
            <div class="form-group row">
              <div class="col-sm-3 col-sm-offset-1">
                <%= label_tag 'product', 'Loại sản phẩm', class: 'control-label' %>
              </div>
              <div class="col-sm-6">
                <%= select_tag 'person[product_id]', options_from_collection_for_select(Product.all, :id, :name), prompt: 'Chọn', class: 'form-control', required: true %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-3 col-sm-offset-1">
                <%= label_tag 'file', 'File CSV', class: 'control-label' %>
              </div>
              <div class="col-sm-6">
                <%= file_field_tag 'person[file]', accept: '.csv', class: 'form-control', required: true %>
              </div>
            </div>
          </div>
          <div class="modal-footer" style="text-align:center;">
            <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            <%= submit_tag 'Nhập', class: 'btn btn-primary' %>
          </div>
          <% end %>
      </div>
    </div>
  </div>