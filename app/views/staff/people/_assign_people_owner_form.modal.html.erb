<div class="modal modal-primary fade" id="modal-assign-people-owner">
  <div class="modal-dialog">
    <div class="box box-primary">

      <div class="box-header with-border text-center">
        <h3 class="box-title">
          <%= fa_icon 'user-circle' %> Chỉ định người phụ trách
        </h3>
      </div><!-- /.box-header -->

      <!-- form start -->
      <%= form_with url: staff_people_mass_assign_owner_path, method: :put,
                    scope: :mass_assign_owner, local: true,
                    id: 'mass_assign_owner_form', class: 'form-horizontal',
                    html:  { role: 'form' } do |f| %>
        <div class="box-body">
          <%= f.hidden_field :people_ids %>
          <%= hidden_field_tag :form_id, 'mass_assign_owner_form' %>

          <div class="form_error_messages"></div>

          <div class="form-group">
            <%= f.label 'Thẩm tele *', class: 'control-label col-sm-4' %>

            <div class="col-sm-8">
              <%= f.collection_select :assigned_staff_id,
                                      Staff.all,
                                      :id, :name,
                                      { :prompt => 'Select' },
                                      { :class => 'form-control select2' } %>
            </div>
          </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-8">
              <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>

              <%= f.submit 'Tạo', class: 'btn btn-success' %>
            </div>
          </div>
        </div><!-- /.box-footer -->
      <% end %>
    </div>

  </div>

</div><!-- /.modal -->