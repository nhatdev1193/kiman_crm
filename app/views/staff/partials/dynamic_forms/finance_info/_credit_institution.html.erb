      <div class="form-group">
        <% field = @form_fields.detect { |field| field.field_name == "ten_tctd_#{institution_number}" } %>
        <label class="control-label col-sm-5"><%= field.display_name %></label>
        <div class="col-sm-7">
          <%= text_field_tag('form_values[' + field.id.to_s + ']', field.field_value, class: 'form-control-plaintext editable', readonly: true) %>
        </div>
      </div>
