<div class="institution-box box box-primary <%= display %>" data-number="<%= institution_number %>">
  <div class="box-header with-border">
    <h4 class="box-title">
      Tổ chức tín dụng <%= institution_number %>
    </h4>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse">
        <i class="fa fa-minus"></i>
      </button>
    </div><!-- /.box-tools -->
  </div>

  <div class="box-body">
    <!-- Left col
    ============================================ -->
