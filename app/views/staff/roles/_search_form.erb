<div class="box box-primary">
  <%= form_with url: staff_organization_roles_path, method: :get, local: true,
                scope: :search_conditions, class: 'form-horizontal',
                html: { role: 'form' } do |f| %>
    <div class="box-header with-border">
      <h3 class="box-title">Search</h3>
    </div>

    <div class="box-body">
      <div class="form-group">
        <%= f.label :name, class: 'control-label col-sm-3' %>

        <div class="col-sm-6">
          <%= f.text_field :name, class: 'form-control', value: @search_conditions&.fetch(:name) %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <button type="submit" class="btn btn-success btn-flat">
            <%= fa_icon 'search' %> Search
          </button>
        </div>
      </div>
    </div><!-- /.box-body -->
  <% end %>
</div>